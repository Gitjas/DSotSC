BEGIN ~DRUID2~

IF WEIGHT #1 ~True()
~ THEN BEGIN 0
  SAY @1
  IF ~~ THEN REPLY @2 GOTO 3
  IF ~~ THEN REPLY @3 GOTO 4
END

IF WEIGHT #0 ~StateCheck(Myself,STATE_CHARMED)
~ THEN BEGIN 1
  SAY @4
  IF ~~ THEN JOURNAL @5 EXIT
END

IF ~~ THEN BEGIN 2
  SAY @6
  IF ~~ THEN EXIT
END

IF ~~ THEN BEGIN 3
  SAY @7
  IF ~~ THEN DO ~Enemy()
~ EXIT
END

IF ~~ THEN BEGIN 4
  SAY @8
  IF ~~ THEN DO ~Enemy()
~ EXIT
END
