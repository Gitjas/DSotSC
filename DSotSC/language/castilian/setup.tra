@20508 = ~¡Haré esto!~ [SKEZR08]
@20509 = ~Estoy cansado.~ [SKEZR09]
@20510 = ~*bostezo*~ [SKEZR10]
@20511 = ~Arghhh... Uargh...~ [SKEZR11]
@20512 = ~Hrrmmm... Urmmm... Arm... Mmm... Mmm.~ [SKEZR12]
@20513 = ~¡El olor! No me gusta el olor...~ [SKEZR13]
@20514 = ~Está bien este sitio, ¿verdad?~ [SKEZR14]
@20515 = ~Mmm-mm-mmm, otra vez me estoy quedando sin tabaco.~ [SKEZR15]
@20516 = ~Mmm-mm-mmm... Bastante tranquila esta víspera, ¿no?~ [SKEZR16]
@20517 = ~¿Sí?~ [SKEZR17]
@20518 = ~¡Oigo!~ [SKEZR18]
@20519 = ~¿Por qué me hacéis esto? Eh...~ [SKEZR19]
@20520 = ~¡Estoy de camino!~ [SKEZR20]
@20521 = ~¡Venga! ¡Ahí voy!~ [SKEZR21]
@20522 = ~¡Egh!~ [SKEZR22]
@20523 = ~Unnghh... Ngeergh...~ [SKEZR23]
@20524 = ~Unrrggghhh...~ [SKEZR24]
@20525 = ~Mmheerrgghh...~ [SKEZR25]
@20526 = ~¡Gnah! ¿¡Qué!?~ [SKEZR26]
@20538 = ~Urghh...~ [SKEZR38]
@20539 = ~Urgh... ¡No me encuentro bien!~ [SKEZR39]
